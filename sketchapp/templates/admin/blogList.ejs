{%extends 'admin/dbase.ejs'%} {%load static%} {%block headers%} {%endblock%} {%block body%}

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">

            
            <!-- row -->

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Data Table</h4>
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered zero-configuration">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Image</th>
                                                <th>Uploaded on</th>
                                                <th style="width: 20%;">Content</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for blog in blogs %}
                                            <tr>
                                                <td>{{blog.title}}</td>
                                                <td>
                                                    <div class="media align-items-center">
                                                        <div class="iq-movie">
                                                            {% if blog.image %}
                                                            <a href="javascript:void(0);"><img src="{{blog.image.url}}" class="img-responsive" alt="" style="width: 50px;"></a>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>{{blog.date}}</td>
                                                <td>{{blog.content}}</td>
                                                <td>
                                                    <input type="hidden" class="del_id_value" value="{{blog.id}}">
                                                    <span><a href="/{{blog.id}}/AddBlog" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a><a href="/{{blog.id}}/DeleteBlog" class="delete12"  onclick="return confirm('Are you sure?')" data-toggle="tooltip" data-placement="top" title="Close"><i class="fa fa-close color-danger"></i></a></span>
                                                </td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Title</th>
                                                <th>Image</th>
                                                <th>Uploaded on</th>
                                                <th style="width: 30%;">Content</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ container -->
        </div>
        
{%endblock%}